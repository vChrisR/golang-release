platform=`uname | tr '[:upper:]' '[:lower:]'`

if [ -z "${BOSH_PACKAGES_DIR:-}" ]; then
  export GOROOT=$(readlink -nf /var/vcap/packages/golang-1.9-armv7-${platform})
else
  export GOROOT=$BOSH_PACKAGES_DIR/golang-1.9-armv7-${platform}
fi

export GOPATH=$PWD
export PATH=$GOROOT/bin:$GOPATH/bin:$PATH
